            <arg column="XMMC" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="XMBH" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="XMKSSJ" jdbcType="TIMESTAMP" javaType="java.util.Date" />
